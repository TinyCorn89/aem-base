<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    title="Ad-Component"
    width="500"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Widget"
                anchor="100%"
                title="Properties"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <publicationDate
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="Publication Date"
                        hideTime="true"
                        name="./publicationDate"
                        validateOnBlur="{Boolean}true"
                        xtype="datetime"/>
                    <expirationDate
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="ExpirationDate"
                        hideTime="true"
                        name="./expirationDate"
                        validateOnBlur="{Boolean}true"
                        xtype="datetime"/>
                    <advertiserId
                        jcr:primaryType="cq:Widget"
                        fieldLabel="AdvertiserId"
                        name="./advertiserId"
                        xtype="textfield"/>
                    <adCategory
                        jcr:primaryType="cq:Widget"
                        fieldLabel="AdCategory"
                        name="./adCategory"
                        xtype="textfield"/>
                    <keywords
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Keywords"
                        name="./keywords"
                        xtype="tags"/>
                    <adFinder
                        jcr:primaryType="cq:Widget"
                        defaultValue="true"
                        fieldLabel="AdFinder"
                        name="./adFinder"
                        type="checkbox"
                        xtype="selection"/>
                    <startDate
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="StartDate"
                        hideTime="true"
                        name="./startDate"
                        validateOnBlur="{Boolean}true"
                        xtype="datetime"/>
                    <endDate
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="EndDate"
                        hideTime="true"
                        name="./endDate"
                        validateOnBlur="{Boolean}true"
                        xtype="datetime"/>
                    <displayName
                        jcr:primaryType="cq:Widget"
                        fieldLabel="DisplayName"
                        name="./displayName"
                        xtype="textfield"/>
                    <sharedSites
                        jcr:primaryType="cq:Widget"
                        fieldLabel="SharedSites"
                        name="./sharedSites"
                        xtype="tags"/>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Widget"
                title="Settings"
                xtype="panel"/>
        </items>
    </items>
</jcr:root>
