<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    boxMaxWidth="800"
    height="500"
    title="Issue"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Issue">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title"
                        labelSeparator=":"
                        maxLength="{Long}50"
                        name="./title"
                        width="{Long}300"
                        xtype="textfield"/>
                    <subTitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Sub - Title"
                        labelSeparator=":"
                        maxLength="{Long}50"
                        name="./subTitle"
                        width="{Long}300"
                        xtype="textfield"/>
                    <pdfPath
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        blankText="PDF Path is mandatory"
                        fieldLabel="PDF"
                        labelSeparator=":"
                        name="./pdfPath"
                        rootPath="/content/dam"
                        width="{Long}300"
                        xtype="pathfield"/>
                    <thumbnail
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        blankText="Thumbnail Path is mandatory"
                        fieldLabel="Thumbnail"
                        labelSeparator=":"
                        name="./thumbnail"
                        rootPath="/content/dam"
                        width="{Long}300"
                        xtype="pathfield"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
