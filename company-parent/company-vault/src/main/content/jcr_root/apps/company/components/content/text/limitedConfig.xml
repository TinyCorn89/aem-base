<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="SHS : Content : Text Image Caption"
    xtype="dialog">
    <paraformat
        jcr:primaryType="nt:unstructured"
        features="*">
        <formats jcr:primaryType="cq:WidgetCollection">
            <paragraph
                jcr:primaryType="nt:unstructured"
                description="Paragraph"
                tag="p"/>
            <h1
                jcr:primaryType="nt:unstructured"
                description="Header 1"
                tag="h1"/>
            <h2
                jcr:primaryType="nt:unstructured"
                description="Header 2"
                tag="h2"/>
            <h3
                jcr:primaryType="nt:unstructured"
                description="Header 3"
                tag="h3"/>
            <h4
                jcr:primaryType="nt:unstructured"
                description="Header 4"
                tag="h4"/>
            <h5
                jcr:primaryType="nt:unstructured"
                description="Header 5"
                tag="h5"/>
            <h6
                jcr:primaryType="nt:unstructured"
                description="Header 6"
                tag="h6"/>
        </formats>
    </paraformat>
    <text
        jcr:primaryType="cq:Widget"
        height="500"
        hideLabel="{Boolean}true"
        name="./text"
        xtype="richtext">
        <rtePlugins jcr:primaryType="nt:unstructured"/>
    </text>
    <table
        jcr:primaryType="nt:unstructured"
        features="*">
        <cellStyles jcr:primaryType="cq:WidgetCollection">
            <tbl-sideHeader
                jcr:primaryType="nt:unstructured"
                cssName="tbl-sideHeader"
                text="Side Header"/>
            <tbl-subHeader
                jcr:primaryType="nt:unstructured"
                cssName="tbl-subHeader"
                text="Sub Header"/>
            <tbl-altRow
                jcr:primaryType="nt:unstructured"
                cssName="tbl-altRow"
                text="Alternate Row"/>
        </cellStyles>
    </table>
    <misctools
        jcr:primaryType="nt:unstructured"
        features="*"/>
    <edit
        jcr:primaryType="nt:unstructured"
        features="*"/>
    <subsuperscript
        jcr:primaryType="nt:unstructured"
        features="*"/>
    <styles
        jcr:primaryType="nt:unstructured"
        features="*"/>
    <linkbrowseConfig
        jcr:primaryType="nt:unstructured"
        protocols="[http://,https://,ftp://,mailto:]"/>
    <cssStyles
        jcr:primaryType="nt:unstructured"
        callout="Callout"
        intro-text="IntroText"
        link-arrow="LinkArrow"
        pull-quote="PullQuote"/>
    <externalStyleSheets
        jcr:primaryType="nt:unstructured"
        css1="/etc/designs/company/clientlib_base/main.less"/>
    <caption
        jcr:primaryType="cq:Widget"
        fieldLabel="Caption"
        name="./caption"
        xtype="textarea"/>
    <enlarge
        jcr:primaryType="cq:Widget"
        collapsed="{Boolean}true"
        collapsible="{Boolean}true"
        title="Enlarge"
        xtype="dialogfieldset">
        <items jcr:primaryType="cq:WidgetCollection">
            <enlarge
                jcr:primaryType="cq:Widget"
                defaultValue="{Boolean}false"
                fieldLabel="'Enlarge' Link"
                inputValue="{Boolean}true"
                name="./enlarge"
                type="checkbox"
                xtype="selection"/>
            <enlargeText
                jcr:primaryType="cq:Widget"
                defaultValue="Enlarge this image"
                fieldLabel="Enlarge Text"
                name="./enlargeText"
                xtype="textfield"/>
        </items>
    </enlarge>
    <alt
        jcr:primaryType="cq:Widget"
        fieldDescription="(leave empty to use the title defined above)"
        fieldLabel="Alt Text"
        name="./image/alt"
        xtype="textfield"/>
    <linkURL
        jcr:primaryType="cq:Widget"
        fieldDescription="For valid external link, one must include protocol (e.g. http://)"
        fieldLabel="Link Image To"
        name="./linkURL"
        rootPath="/content"
        xtype="pathfield"/>
    <targetBlank
        jcr:primaryType="cq:Widget"
        defaultValue="{Boolean}false"
        fieldLabel="Set target='_blank'"
        inputValue="{Boolean}true"
        name="./targetBlank"
        type="checkbox"
        xtype="selection"/>
    <float
        jcr:primaryType="cq:Widget"
        defaultValue="right"
        fieldLabel="Float"
        name="./float"
        type="radio"
        xtype="selection">
        <options jcr:primaryType="cq:WidgetCollection">
            <show
                jcr:primaryType="nt:unstructured"
                text="Right"
                value="right"/>
            <center
                jcr:primaryType="nt:unstructured"
                text="Center"
                value="center"/>
            <hide
                jcr:primaryType="nt:unstructured"
                text="Left"
                value="left"/>
        </options>
    </float>
    <size
        jcr:primaryType="cq:Widget"
        fieldLabel="Size"
        heightParameter="./image/height"
        widthParameter="./image/width"
        xtype="sizefield"/>
    <resType
        jcr:primaryType="cq:Widget"
        ignoreData="{Boolean}true"
        name="./image/sling:resourceType"
        value="foundation/components/image"
        xtype="hidden"/>
</jcr:root>
